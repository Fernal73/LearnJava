#! /usr/bin/env bash

#######################################################################
#@author: Linus Fernandes(linusfernandes @gmail.com)
# @file: build
## @created: Friday May 03, 2019 21: 20: 25 IST
# @copyright: Copyright(c) Linus Fernandes
## @description: 
######################################################################
usage() {
        echo "usage: build dir"
        echo "dir - Project directory, must exist"
        exit 1
}
isDX ()
{
  type dx &>/dev/null
  return $?
}
isJVM ()
{
  type jar &>/dev/null
  return $?
}
createDex()
{
  rm -rf $proj/dist
  dx --dex --output=$proj.dex $proj && mkdir $proj/dist && cp $proj.dex $proj/dist && exit 0
  dxRes=$?
}

createJar()
{
  cd $proj
  jar cfnm $proj.jar manifest.mf `find . -name "*.class" ! -path "*.git*" ! -type d`
  jarRes=$?
  [ -e $proj.jar ] && cp $proj.jar .. && mkdir -p dist && mv $proj.jar dist
  cd ..
  exit 0
}

proj=$1
ver=""
isDX
dex=$?
isJVM
jvm=$?
dxRes=0
jarRes=0
if [ -z $proj -o ! -d $proj ]
  then
    usage
else
    echo $proj
    ver=$(<$proj/.ver)
    ecj -$ver $proj
    success=$?
    if [ $success -eq 0 ]
      then
      if [ $dex -eq 0 ]
        then
        createDex
      fi
      if [ $jvm -eq 0 ]
        then
        createJar
      fi
    fi
fi
exit `expr $success + $dxRes + $jarRes`
