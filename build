#! /usr/bin/env bash

#######################################################################
#@author: Linus Fernandes(linusfernandes @gmail.com)
# @file: build
## @created: Friday May 03, 2019 21: 20: 25 IST
# @copyright: Copyright(c) Linus Fernandes
## @description: 
######################################################################
    usage() {
        echo "usage: build dir"
        exit 1
    }
if [ -z $1 ]
  then
    usage
else
    echo $1
    ver=$(<$1/.ver)
    ecj -$ver $1
    type dx && dx --dex --output=$1.dex $1
    cd $1
    type jar && jar cfn $1.jar `find . -name "*.class" ! -path "*.git*" ! -type d`
    mv $1.jar ..
    cd ..
fi
exit 0
