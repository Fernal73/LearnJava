#! /usr/bin/env bash

#######################################################################
#@author: Linus Fernandes(linusfernandes @gmail.com)
# @file: build
## @created: Friday May 03, 2019 21: 20: 25 IST
# @copyright: Copyright(c) Linus Fernandes
## @description: 
######################################################################
usage() {
        echo "usage: build dir"
        echo "dir - Project directory, must exist"
        exit 1
}

isDX ()
{
  type dx &>/dev/null
  return $?
}

isJVM ()
{
  type jar &>/dev/null
  return $?
}

createDex()
{
  rm -rf $proj/$distDir || \
    { echo "Unable to delete folder $proj/$distDir"; }
  dx --dex --output=$proj.dex $proj && \
    mkdir -p $proj/$distDir && \
    cp $proj.dex $proj/$distDir && exit 0 || \
    { echo "Error creating dex output"; }
  dxRes=$?
}

createJar()
{
  cd $proj || echo "cannot cd to $proj";
  jar cfm $proj.jar $manifestFile \
    `find . -name "*.class" \
    ! -path "*.git*" -type f` || \
    { echo "Error creating jar output: $proj.jar";exit 1; }
  jarRes=$? 
  [ -e $proj.jar ] && cp $proj.jar .. \
    && mkdir -p $distDir && mv $proj.jar $distDir || \
    { echo "Error moving jar file to $proj/$distDir"; }
  cd ..
  exit 0
}

proj=$1
ver="1.7"
distDir="dist"
manifestFile="manifest.mf"
verFile=".ver"
isDX
dex=$?
isJVM
jvm=$?
dxRes=0
jarRes=0
if [ -z $proj ] || [ ! -d $proj ]
  then
    usage
else
    echo $proj
    [ -e $proj/$verFile ] && \
      { ver=$(cat $proj/$verFile) || \
      echo "Unable to read $proj/$verFile";}
    ecj -$ver $proj 
    success=$?
    if [ $success -eq 0 ]
      then
      if [ $dex -eq 0 ]
        then
        createDex
      fi
      if [ $jvm -eq 0 ]
        then
        createJar
      fi
      if [ $dex ] && [ $jvm ]
         then
           echo "Unable to create executable archive"
           success=1
      fi
    fi
fi
exit `expr $success + $dxRes + $jarRes`
