#! /usr/bin/env bash

#######################################################################
#@author: Linus Fernandes(linusfernandes @gmail.com)
# @file: build
## @created: Friday May 03, 2019 21: 20: 25 IST
# @copyright: Copyright(c) Linus Fernandes
## @description: 
######################################################################
    usage() {
        echo "usage: build dir"
        exit 1
}
proj=$1
ver=""
if [ -z $proj ]
  then
    usage
else
    echo $proj
    ver=$(<$proj/.ver)
    ecj -$ver $proj
    success=$?
    if [ $success -eq 0 ]
      then
      type dx &>/dev/null && dx --dex --output=$proj.dex $proj
      cd $proj
      type jar &>/dev/null && jar cfnm $proj.jar manifest.mf `find . -name "*.class" ! -path "*.git*" ! -type d` 
      [ -e $proj.jar ] && mv $proj.jar ..
      cd ..
    fi
fi
exit 0
